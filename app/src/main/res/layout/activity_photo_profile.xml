<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".photomanager.PhotoProfileActivity"
    android:background="@drawable/information_style">

    <ImageView
        android:id="@+id/photo_user_button_modify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button_style"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:src="@mipmap/baseline_insert_photo_black_24"
        app:layout_constraintEnd_toStartOf="@+id/camera_user_button_modify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/camera_user_button_modify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_button_style"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:src="@mipmap/baseline_photo_camera_black_24"
        app:layout_constraintBottom_toBottomOf="@+id/photo_user_button_modify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photo_user_button_modify"
        app:layout_constraintTop_toTopOf="@+id/photo_user_button_modify" />

    <ImageView
        android:id="@+id/activity_photo_user_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/image_realestate"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/activity_photo_validate_user_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_user_button_modify" />

    <Button
        android:id="@+id/activity_photo_validate_user_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/activity_photo_modifier_validate"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_photo_cancel_user_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_photo_user_photo" />

    <Button
        android:id="@+id/activity_photo_cancel_user_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/activity_photo_modifier_cancel"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_style"
        app:layout_constraintBottom_toBottomOf="@+id/activity_photo_validate_user_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_photo_validate_user_btn"
        app:layout_constraintTop_toTopOf="@+id/activity_photo_validate_user_btn" />

</android.support.constraint.ConstraintLayout>